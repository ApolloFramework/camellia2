cmake \
  -G "Xcode" \
  -DCMAKE_C_COMPILER_WORKS=1 \
  -DCMAKE_CXX_COMPILER_WORKS=1 \
  -DCMAKE_XCODE_ATTRIBUTE_CLANG_C_LANGUAGE_STANDARD="c11" \
  -DCMAKE_XCODE_ATTRIBUTE_CLANG_CXX_LANGUAGE_STANDARD="c++11" \
  -DCMAKE_XCODE_ATTRIBUTE_CLANG_CXX_LIBRARY="libc++" \
  -DCMAKE_XCODE_ATTRIBUTE_CLANG_GENERATE_DEBUGGING_SYMBOLS="YES" \
  -DCMAKE_XCODE_ATTRIBUTE_GCC_GENERATE_DEBUGGING_SYMBOLS="YES" \
  -DCMAKE_OSX_DEPLOYMENT_TARGET="10.8" \
  -DCMAKE_OSX_SYSROOT="/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.8.sdk" \
  -DADDITIONAL_LIBRARIES="-stdlib=libstdc++" \
  -DTRILINOS_PATH:FILEPATH="/Users/nroberts/lib/trilinos/mpi-debug" \
  -D MOAB_PATH="/Users/nroberts/lib/moab" \
  -DCAMELLIA_SOURCE_DIR:FILEPATH="/Users/nroberts/Camellia/src" \
  -DCMAKE_BUILD_TYPE="DEBUG" \
  -D ZLIB_LIB="/usr/lib/libz.dylib" \
  -DMPI_DIR="$HOME/lib/openmpi-1.8.7" \
  -DMPI_INCLUDE="/Users/nroberts/lib/openmpi-1.8.7/include" \
  -DMPI_LINK_CC="-L/Users/nroberts/lib/openmpi-1.8.7/lib -lmpi -lm" \
  -DMPI_LINK_FORTRAN="-Wl,-commons,use_dylibs -I/Users/nroberts/lib/openmpi-1.8.7/lib -L/Users/nroberts/lib/openmpi-1.8.7/lib -lmpi_mpifh -lmpi -lm -lmpi_cxx" \
  -DSCALAPACK_LIB="/Users/nroberts/lib/libscalapack.a" \
  -DINCLUDE_DRIVERS_IN_ALL:BOOL=ON \
  -DBUILD_DPGTESTS_DRIVER:BOOL=ON \
  -DBUILD_BRENDAN_DRIVERS:BOOL=ON \
  -DBUILD_TRUMAN_DRIVERS:BOOL=ON \
  -DBUILD_TRUMAN_TESTS_DRIVERS:BOOL=OFF \
  -DBUILD_CONDITIONING_EXPERIMENT:BOOL=ON \
  -DBUILD_CONFUSION_JESSE_DRIVERS:BOOL=OFF \
  -DBUILD_CONVECTION_DRIVERS:BOOL=ON \
  -DBUILD_INCOMPRESSIBLENS_DRIVERS:BOOL=ON \
  -DBUILD_PRECONDITIONING_DRIVERS:BOOL=ON \
  ../..

